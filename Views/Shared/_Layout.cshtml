<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Rasul SONMEZ personal portfolio website">
    <link rel="icon" type="image/x-icon" href="/images/mouse-scroll.png">

    <title>@ViewData["Title"] - Rasul SONMEZ</title>

    <!--Bootstrap-->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!--Boxicon-->
    <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <!--Custom css-->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="navbar">
            <div class="container justify-content-center">
                <h3>
                    <a href="/" class="navbar-text text-decoration-none brand-title">
                        Rasul
                    </a>
                </h3>
               
            </div>
        </div>
        <nav class="navbar navbar-expand-lg">
            <div class="container">  
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item me-3">
                        <a class="nav-link active" aria-current="page" href="/">About</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="projects">Projects</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="skills">Skills</a>
                    </li>

                    <li class="nav-item me-3">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="reachme">Reach me!</a>
                    </li>
                </ul>  
            </div>
        </nav>
    </header>
   
        <main role="main">
            @RenderBody()
        </main>
   

    <footer class="footer text-muted mt-5 text-center">
        <p class="container">
            2020-PRESENT © Rasul SONMEZ
        </p>
    </footer>
    <!--Jquery-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!--Bootstrap js-->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!--Custom js-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
